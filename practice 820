#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <ctype.h>
#define STOP '.'

int main()
{
	char c;
	int n_chars = 0;
	int n_lines = 0;
	int n_words = 0;
	int word_flag = 0;
	int line_flag = 0;

	printf("Enter text :\n");

	while ((c = getchar()) != STOP)
	{
		if (!isspace(c))		//!false = true
			n_chars++;
			
		if (!isspace(c) && !word_flag){
			n_words++;
			word_flag = 1;
		}
		
		if (isspace(c))
			word_flag = 0;	//false

		if (!isspace(c) && !line_flag)
		{
			n_lines++;
			line_flag = 1;
		}

		if (c == '\n')
			line_flag = 0;
	}

	printf("Characters = %d, Words = %d, Lines = %d\n", n_chars, n_words, n_lines);

	return 0;
}
